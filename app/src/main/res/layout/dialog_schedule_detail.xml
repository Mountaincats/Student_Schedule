<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- 顶部：删除按钮 -->
        <!-- 使用 ImageButton 显示垃圾桶图标，或者 TextView 显示文字 -->
        <TextView
            android:id="@+id/btnDetailDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="#F44336"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:drawableStartCompat="@android:drawable/ic_menu_delete"
            android:drawableTint="#F44336"/>

        <!-- 中间：行程名称 -->
        <TextView
            android:id="@+id/tvDetailScheduleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="数学课"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/btnDetailDelete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 分割线 -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDetailScheduleName" />

        <!-- 备注区域 -->
        <LinearLayout
            android:id="@+id/layoutNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/divider">

            <!-- 备注名 -->
            <TextView
                android:id="@+id/tvDetailNoteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上课地点"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="4dp"/>

            <!-- 备注内容 -->
            <TextView
                android:id="@+id/tvDetailNoteContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="303教室"
                android:textSize="16sp"
                android:textColor="#212121"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- 底部按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutNote"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 确认按钮 -->
            <Button
                android:id="@+id/btnDetailConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="确认"
                android:backgroundTint="#E0E0E0"
                android:textColor="#212121"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

            <!-- 编辑按钮 -->
            <Button
                android:id="@+id/btnDetailEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="编辑"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>