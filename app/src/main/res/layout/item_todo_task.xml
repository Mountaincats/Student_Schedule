<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/todo_task_background"
    android:padding="16dp"
    android:foreground="@drawable/todo_item_selector"
    android:gravity="center_vertical"
    android:minHeight="70dp" >

    <!-- 序号 -->
    <TextView
        android:id="@+id/todoTaskNumber"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/todo_number_background"
        android:textColor="@color/white" />


    <!-- 中间：任务内容 -->
    <TextView
        android:id="@+id/todoTaskContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="任务内容"
        android:textSize="16sp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"/>

    <!-- 左边：拖拽手柄和序号 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 右边：删除按钮 -->
        <Button
            android:id="@+id/todoDeleteButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="×"
            android:textSize="20sp"
            android:background="@drawable/delete_button_background" />

        <!-- 拖拽手柄图标 -->
        <ImageView
            android:id="@+id/dragHandle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_drag_handle"
            android:contentDescription="拖拽手柄" />

    </LinearLayout>

</LinearLayout>